# Backend Environment Variables
# Copy to .env and fill in actual values

# Database Configuration
DATABASE_URL=mysql+pymysql://user:password@localhost:3306/kpi_platform
DB_HOST=localhost
DB_PORT=3306
DB_NAME=kpi_platform
DB_USER=kpi_user
DB_PASSWORD=your_secure_password

# JWT Authentication
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Application Settings
DEBUG=True
LOG_LEVEL=INFO

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB
UPLOAD_DIR=./uploads

# Report Generation
REPORT_OUTPUT_DIR=./reports

# Database Connection Pool Configuration (for MySQL/MariaDB only)
# These settings optimize database performance under load
DATABASE_POOL_SIZE=20        # Number of persistent connections
DATABASE_MAX_OVERFLOW=10     # Additional connections when needed
DATABASE_POOL_TIMEOUT=30     # Seconds to wait for connection
DATABASE_POOL_RECYCLE=3600   # Recycle connections after 1 hour

# Email Configuration (choose SendGrid OR SMTP)
# Option 1: SendGrid (Recommended)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Option 2: SMTP (e.g., Gmail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# Email Settings
REPORT_FROM_EMAIL=reports@kpi-platform.com
REPORT_EMAIL_ENABLED=true
REPORT_EMAIL_TIME=06:00
