{
  "mcpServers": {
    "claude-flow": {
      "command": "npx",
      "args": ["claude-flow@alpha", "mcp", "start"],
      "type": "stdio"
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}"
      },
      "type": "stdio"
    },
    "taskmaster-ai": {
      "command": "npx",
      "args": ["-y", "--package=task-master-ai", "task-master-ai"],
      "env": {
        "ANTHROPIC_API_KEY": "${ANTHROPIC_API_KEY}",
        "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}",
        "MODEL": "claude-sonnet-4-5",
        "PERPLEXITY_MODEL": "sonar-pro",
        "MAX_TOKENS": "64000",
        "TEMPERATURE": "0.2",
        "DEFAULT_SUBTASKS": "5",
        "DEFAULT_PRIORITY": "medium"
      },
      "type": "stdio"
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "env": {
        "MEMORY_PERSIST": "true",
        "MEMORY_PATH": "${PROJECT_ROOT}/.claude-memory.json"
      },
      "type": "stdio"
    },
    "minizinc": {
      "command": "uv",
      "args": ["--directory", "${MCP_SOLVER_PATH}", "run", "mcp-solver"],
      "type": "stdio"
    },
    "chat-dsreasoner": {
      "command": "node",
      "args": ["${ANY_CHAT_MCP_PATH}/build/index.js"],
      "env": {
        "AI_CHAT_KEY": "${DEEPSEEK_API_KEY}",
        "AI_CHAT_NAME": "DeepSeek-Reasoner",
        "AI_CHAT_MODEL": "deepseek-reasoner",
        "AI_CHAT_BASE_URL": "https://api.deepseek.com/v1"
      },
      "type": "stdio"
    },
    "chat-codestral": {
      "command": "node",
      "args": ["${ANY_CHAT_MCP_PATH}/build/index.js"],
      "env": {
        "AI_CHAT_KEY": "${MISTRAL_API_KEY}",
        "AI_CHAT_NAME": "Codestral",
        "AI_CHAT_MODEL": "codestral-2508",
        "AI_CHAT_BASE_URL": "https://api.mistral.ai/v1"
      },
      "type": "stdio"
    }
  }
}
